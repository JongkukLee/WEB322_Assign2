    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch",            
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/server.js"
        },
        {
            "name": "Attach",            
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "localRoot": "${workspaceRoot}",           
            "port": 5858
        }
,
        {
            "name": "Attach to Process",            
            "type": "node",
            "request": "attach",
            "processId": "${command:PickProcess}",           
            "port": 5858
        }        
    ]
}